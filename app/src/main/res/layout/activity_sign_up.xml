    <Button
        android:id="@+id/buttonSignup"
        android:layout_width="269dp"
        android:layout_height="51dp"
        android:textSize="18sp"
        android:text="@string/activity_sign_up_register"
        android:textStyle="bold"
        android:shadowColor="@android:color/transparent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/pure_white"
        android:background="@drawable/shapelogin"/>
    <CheckBox
        android:id="@+id/termsCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_sign_up_by_signing_up_you_agree_to_our_terms_and_privacy_policy"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/blue_lagoon"
        android:buttonTint="@color/blue_lagoon"
        android:checked="true"/>

</LinearLayout>