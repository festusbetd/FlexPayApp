<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.DashboardActivity"
    android:background="@color/pure_white"
    tools:showIn="@layout/app_bar_dashboard"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/activity_dashboard_dashboard_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:background="@color/zircon"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/activity_dashboard_first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_dashboard_no_products_or_goals_textView"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_content_dashboard_seems_like_you_have_no_products_or_goals_setup_yet"
                    android:textColor="@color/blue_lagoon"
                    android:textSize="14dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/activity_dashboard_empty_textview"
                    android:layout_width="133dp"
                    android:layout_below="@+id/textView2"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/spring_green"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_dashboard_image_view"
                    android:layout_width="190dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="159dp"
                    android:src="@drawable/emptydashboard"
                    />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_dashboard_view_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_dashboard_first_layout"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <View
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_dashboard_dashboard_view_deals"
            android:layout_below="@+id/activity_dashboard_view_line"
            android:layout_margin="15dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp">
                    <Button
                        android:id="@+id/activity_dashboard_btn_view_deals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_content_dashboard_view_deals"
                        android:shadowColor="@android:color/transparent"
                        android:textColor="@color/pure_white"
                        android:background="@drawable/shapelogin"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    >
                    <Button
                        android:id="@+id/activity_dashboard_btn_setup_goals"
                        android:text="@string/activity_content_dashboard_setup_goals"
                        android:shadowColor="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pure_white"
                        android:background="@drawable/shapelogin"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dashboadeals"
        android:layout_below="@+id/activity_dashboard_dashboard_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/activity_dashboard_goal_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_content_dashboard_bookings_history"
            android:layout_weight="1"
            android:textColor="@color/blue_lagoon"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_dashboard_dashboad_dealsFilter"
        android:layout_below="@+id/dashboadeals"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/regent_blue"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">
        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:padding="10dp"
            android:textSize="14sp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/spinnerProductsTypes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:padding="10dp"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_dashboard_dashboard_deals_call_api"
        android:layout_below="@+id/activity_dashboard_dashboad_dealsFilter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/products_rv"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/activity_dashboard_dasboard_add_goals"
        android:layout_below="@+id/activity_dashboard_dashboard_deals_call_api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/activity_dashboard_layout_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/textView"
                    android:layout_width="190dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="159dp"
                    android:src="@drawable/emptydashboard"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/activity_dashboard_achieve_more_by_setting_goals"
                    android:layout_width="133dp"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_content_dashboard_achieve_more_by_setting_goals"
                    android:textColor="@color/blue_lagoon"
                    android:textSize="14dp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/activity_content_btnAddGoals"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/activity_dashboard_achieve_more_by_setting_goals"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_content_dashboard_get_started"
                    android:shadowColor="@android:color/transparent"
                    android:textColor="@color/blue_lagoon"
                    android:textStyle="bold"
                    android:background="@drawable/shapebtnaddgoals"/>
            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
    </RelativeLayout>