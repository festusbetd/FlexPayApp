<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flx"
    tools:context=".Activities.AccountManagementActivity">

    <Button
        android:id="@+id/account_management_login_btn"
        android:alpha="1.6"
        android:text="@string/activity_account_management_log_in"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:background="@drawable/shapelogin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <Button
        android:id="@+id/account_management_register_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_lagoon"
        android:text="@string/activity_account_management_create_account"
        android:shadowColor="@android:color/transparent"
        android:padding="0dp"
        android:textStyle="bold"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shaperegister"
        android:layout_marginStart="200dp" />

</RelativeLayout>