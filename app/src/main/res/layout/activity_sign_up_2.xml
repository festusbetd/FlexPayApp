<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/regent_blue"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/activity_sign_up_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/regent_blue"
        android:orientation="horizontal"
        android:padding="15dp">
            <TextView
                android:id="@+id/goals"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_lagoon"
                android:text="Get Started"
                android:textStyle="bold"
                android:textSize="24sp"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/activity_sign_up_framelayout"
        android:layout_centerInParent="true"
        android:layout_below="@+id/activity_sign_up_logo"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_add"
            app:cardBackgroundColor="@color/pure_white"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="45dp"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:textColorHint="@color/blue_lagoon"
                        android:layout_width="match_parent"
                        android:theme="@style/TextLabel"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/editTextPhone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:alpha="0.8"
                            android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp"
                            android:drawablePadding="10dp"
                            android:hint="@string/activity_sign_up_phone_number"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/blue_lagoon"
                            android:inputType="phone"
                            android:textColorHint="@color/blue_lagoon"
                            android:textColorHighlight="@color/white"
                            android:drawableStart="@drawable/ic_phone_in_talk_black_24dp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:textColorHint="@color/blue_lagoon"
                        android:layout_width="match_parent"
                        android:theme="@style/TextLabel"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/editTextEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:alpha="0.9"
                            android:drawableLeft="@drawable/ic_email_black_24dp"
                            android:drawablePadding="10dp"
                            android:hint="@string/activity_sign_up_email"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/blue_lagoon"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/blue_lagoon"
                            android:textColorHighlight="@color/white"
                            android:drawableStart="@drawable/ic_email_black_24dp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:textColorHint="@color/blue_lagoon"
                        android:layout_width="match_parent"
                        android:theme="@style/TextLabel"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/editTextUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:alpha="0.8"
                            android:drawableLeft="@drawable/ic_person_black_24dp"
                            android:drawablePadding="10dp"
                            android:hint="@string/activity_sign_up_username"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/blue_lagoon"
                            android:inputType="text"
                            android:textColorHint="@color/blue_lagoon"
                            android:textColorHighlight="@color/white"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:textColorHint="@color/blue_lagoon"
                        android:layout_width="match_parent"
                        android:theme="@style/TextLabel"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="20dp">

                            <EditText
                                android:id="@+id/editTextFirst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_weight="0.5"
                                android:layout_gravity="right"
                                android:digits="abcdefghijklmnopqrstuvwxyz"
                                android:drawableLeft="@drawable/ic_person_black_24dp"
                                android:drawablePadding="10dp"
                                android:hint="@string/activity_sign_up_first_name"
                                android:alpha="0.8"
                                android:inputType="text"
                                android:textColor="@color/blue_lagoon"
                                android:textColorHint="@color/blue_lagoon"
                                android:textColorHighlight="@color/white"/>

                            <EditText
                                android:id="@+id/editTextLast"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="0.5"
                                android:digits="abcdefghijklmnopqrstuvwxyz"
                                android:hint="@string/activity_sign_up_last_name"
                                android:alpha="0.8"
                                android:drawableLeft="@drawable/ic_person_black_24dp"
                                android:drawablePadding="10dp"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="@color/blue_lagoon"
                                android:textColorHint="@color/blue_lagoon"
                                android:textColorHighlight="@color/white"/>

                        </LinearLayout>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:textColorHint="@color/blue_lagoon"
                        android:layout_width="match_parent"
                        android:theme="@style/TextLabel"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingBottom="10dp">
                            <EditText
                                android:id="@+id/editTextPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:layout_gravity="right"
                                android:drawableLeft="@drawable/ic_lock_black_24dp"
                                android:drawablePadding="6dp"
                                android:hint="@string/activity_sign_up_password"
                                android:alpha="0.8"
                                android:inputType="textPassword"
                                android:padding="10dp"
                                android:textColor="@color/blue_lagoon"
                                android:textColorHint="@color/blue_lagoon"
                                android:textColorHighlight="@color/white"/>

                            <EditText
                                android:id="@+id/editTextConfirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="0.5"
                                android:hint="@string/activity_sign_up_confirm"
                                android:alpha="0.8"
                                android:drawableLeft="@drawable/ic_lock_black_24dp"
                                android:drawablePadding="6dp"
                                android:inputType="textPassword"
                                android:padding="10dp"
                                android:textColor="@color/blue_lagoon"
                                android:textColorHint="@color/blue_lagoon"
                                android:textColorHighlight="@color/white"/>
                        </LinearLayout>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/buttonSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:layout_gravity="center"
                    android:text="@string/activity_sign_up_register"
                    android:textStyle="bold"
                    android:shadowColor="@android:color/transparent"
                    android:textColor="@color/pure_white"
                    android:background="@drawable/shapelogin"/>
                <CheckBox
                    android:id="@+id/termsCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_sign_up_by_signing_up_you_agree_to_our_terms_and_privacy_policy"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/blue_lagoon"
                    android:buttonTint="@color/blue_lagoon"
                    android:checked="true"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            app:backgroundTint="@color/pure_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pure_white"
            app:fabSize="normal"
            android:src="@drawable/ic_profile_user"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>


</RelativeLayout>
